{
  "name": "coin-convert",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "prestart": "npm run seed:migration:prod",
    "prestart:dev": "npm run seed:migration:dev",
    "start:dev": "node ./dist/bin/www",
    "start": "NODE_ENV=production node ./dist/bin/www",
    "build": "rm -rf ./dist && ./node_modules/.bin/tsc -p tsconfig.json",
    "test": "jest",
    "test:e2e": "CI=true && ./node_modules/.bin/jest --testMatch **/*.e2e.ts --detectOpenHandles  --passWithNoTests --forceExit --collectCoverage=false",
    "seed:migration:dev": "echo \"waiting database for 5 seconds...\" && sleep 5 && npm run knex:dev:migrate && npm run knex:dev:seed",
    "seed:migration:prod": "echo \"waiting database for 5 seconds...\" && sleep 5 && npm run knex:prod:migrate && npm run knex:prod:seed",
    "knex": "./node_modules/.bin/knex --knexfile ./src/config/knexfile.ts",
    "knex:dev:migrate": "npm run knex -- migrate:latest",
    "knex:dev:seed": "npm run knex -- seed:run",
    "knex:prod:migrate": "npm run knex -- migrate:latest",
    "knex:prod:seed": "npm run knex -- seed:run",
    "knex:make:migrate": "npm run knex -- migrate:make",
    "knex:make:seed": "npm run knex -- seed:make",
    "knex:seed": "npm run knex -- seed:run",
    "knex:migrate:rollback": "npm run knex migrate:rollback",
    "knex:migrate:prod": "NODE_ENV=production npm run knex -- migrate:latest",
    "knex:migrate:rollback:prod": "NODE_ENV=production npm run knex migrate:rollback",
    "lint": "pretty-quick --staged && lint-staged"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "knex": "^2.3.0",
    "knex-tiny-logger": "^2.1.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-fetch": "2.6.1",
    "pg": "^8.8.0",
    "ts-jest": "^29.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.2",
    "@types/lodash": "^4.14.186",
    "@types/mock-knex": "^0.4.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.8.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "codecov": "^3.8.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^29.2.0",
    "lint-staged": "^11.0.0",
    "mock-knex": "^0.4.11",
    "node-mocks-http": "^1.11.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "supertest": "^6.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "singleQuote": false,
    "tabWidth": 2,
    "semi": false,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix"
  }
}
